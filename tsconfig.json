{
  "compilerOptions": {
    "outDir": "./dist", // 输出目录
    "rootDir": "./src", // 输入文件目录
    "target": "ES6", // 编译后的 JavaScript 版本
    "module": "commonjs", // 模块系统
    "strict": true, // 启用所有严格类型检查选项
    "esModuleInterop": true, // 允许对 ES 模块进行互操作性处理
    "skipLibCheck": true // 跳过库的类型检查
  },
  "include": [
    "src/**/*.ts" // 包含 src 目录下的所有 TypeScript 文件
  ],
  "exclude": [
    "node_modules" // 排除 node_modules 目录
  ]
}
